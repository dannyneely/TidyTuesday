#good EDA stuff
#check for missing data:
library(visdat)
#check number of each data type
vis_dat(mtcars)
#check number of missing for each feature
vis_miss(mtcars)

#corplot with numeric features
library(tidyverse)
cor_mtcars<- mtcars %>% 
  select(where(is.numeric)) %>% 
  cor()
library(heatmaply)
heatmaply_cor(cor_mtcars)
